<% if comments.blank? %>
<% else %>
  <div class="comment-scroll">
    <% comments.each do |comment| %>
      <div class="border-bottom d-flex align-items-center mt-3 h5">
        <p class="flex-grow-1 m-0"><%= safe_join(comment.comment.split("\n"),tag(:br)) %></p>
        <span class="text-nowrap align-self-end"><%= comment.user.name %></span>
        <% if comment.user == current_user %>
          <span class="text-nowrap align-self-end mx-2"><%= link_to "削除", article_comment_path(article_id: article, id: comment.id), method: :delete, remote: true, class:"text-danger" %></span>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>