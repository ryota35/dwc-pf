<% if user_signed_in? %>
  <%= form_with(model: [article, comment], local: false) do |f| %>
    <%= f.text_area :comment, class:"form-control", rows:5 %><br>
    <div class="d-flex justify-content-end"><%= f.submit "コメントする" %></div>
  <% end %>
<% else %>
  <h4 class="mt-5 new-user"><%= link_to "会員登録", new_user_registration_path, class:"border-bottom border-dark" %>または<%= link_to "ログイン", new_user_session_path, class:"border-bottom border-dark" %>後にコメントが可能です</h4>
<% end %>