<div class="main-login d-flex align-items-center justify-content-center">
  <div class="user-edit mt-5 p-5 bg-light">

    <h2 class="mb-4">新規会員登録</h2>
    <%= render "public/users/shared/error_messages", resource: resource %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field mb-4">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class:"form-control", autocomplete: "name", size:50 %>
      </div>

      <div class="field mb-4">
        <%= f.label :email %>
        <%= f.email_field :email, class:"form-control", autocomplete: "email", size:50 %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, class:"form-control", autocomplete: "new-password", size:50 %>
      </div>

      <div class="field pt-2 pb-5">
        <%= f.label :パスワード（再入力） %>
        <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password", size:50 %>
      </div>

      <div class="actions text-center">
        <%= f.submit "新規登録する", class: 'btn btn-success btn-lg btn-block' %>
      </div>
    <% end %>

    <h4 class="mt-5 new-user">会員登録がお済みの方は<%= link_to "こちら", new_user_registration_path, class:"border-bottom border-dark" %></h4>

  </div>
</div>

