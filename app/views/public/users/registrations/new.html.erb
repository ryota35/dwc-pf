<div class="main-login d-flex align-items-center justify-content-center">
  <div class="p-5 bg-light">

    <h2 class="mb-5">新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/users/shared/error_messages", resource: resource %>

      <div class="field mb-4">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size:50 %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "new-password", size:50 %>
      </div>

      <div class="field mt-2">
        <%= f.label :パスワード（再入力） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", size:50 %>
      </div>

      <div class="actions mt-4 text-center">
        <%= f.submit "新規登録する", class: 'btn btn-success btn-lg btn-block' %>
      </div>
    <% end %>

  </div>
</div>

