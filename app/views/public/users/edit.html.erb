<div class="container">
  <div class="row justify-content-center">

    <%= form_with model: @user, url: user_path(@user), local: true do |f| %>
    
      <h1>プロフィール編集</h1>

      <%= render 'layouts/errors', obj: @user %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.attachment_field :image %>
      </div>
      <div class="form-group">
        <%= f.label :smart_phone %>
        <%= f.text_field :smart_phone %>
      </div>
      <div class="form-group">
        <%= f.label :tablet %>
        <%= f.text_field :tablet %>
      </div>
      <div class="form-group">
        <%= f.label :mno_mvno %>
        <%= f.text_field :mno_mvno %>
      </div>
      <div class="form-group">
        <%= f.label :background %>
        <%= f.text_field :background %>
      </div>
      <div class="form-group">
        <%= f.fields_for :items do |i|%>
          <%= i.label :name %>
          <%= i.text_field :name, placeholder: "アイテム名" %>
          <%= i.label :maker %>
          <%= i.text_field :maker, placeholder: "メーカー" %><br>
        <% end %><br>
      </div>
      <div class="form-group">
        <%= f.label :choice_reason %>
        <%= f.text_area :choice_reason %>
      </div>

      <%= f.submit "編集完了", class:"btn btn-primary" %>

    <% end %>
  </div>
</div>