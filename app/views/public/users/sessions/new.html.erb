<div class="main-login d-flex align-items-center justify-content-center">
  <div class="p-5 bg-light">

    <h2 class="mb-5">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field pb-3">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size:50 %>
      </div>

      <div class="field pb-5">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password", size:50 %>
      </div>

      <div class="actions">
        <%= f.submit "ログインする", class: "btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>
    <h4 class="mt-5 new-user">会員登録がお済みでない方は<%= link_to "こちら", new_user_registration_path, class:"border-bottom border-dark" %></h4>

  </div>
</div>
