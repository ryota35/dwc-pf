<div class="main d-flex align-items-center justify-content-center">
  <div class="p-5 bg-light">
    <h2 class="mb-5">お問い合わせフォーム</h2>

    <%= render 'layouts/errors', obj: @contact %>

    <%= form_with model: @contact do |f| %>

        <div class="form-group">
          <%= f.label :"タイトル(50文字まで)", class:"contact-title" %><br>
          <%= f.text_field :title, autofocus: true, class:"js-text contact-title-text" %><br>
          <P class="js-text-count pull-right"></P>
        </div>

        <div class="form-group mt-5">
          <%= f.label :message, class:"contact-title" %><br>
          <%= f.text_area :message, class:"contact-title-message" %><br>
        </div>

      <%= f.submit "送信する", class:"btn btn-primary pull-right px-5 py-3" %>

    <% end %>

  </div>
</div>