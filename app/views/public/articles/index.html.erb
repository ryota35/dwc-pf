  <div class="container">

    <div class="row pt-5">
      <h1 class="ml-4">Latest Articles</h1>
      <div class="d-flex align-items-center ml-auto mr-5">
        <% if user_signed_in?%>
          <%= link_to  new_article_path, class: 'btn border border-dark mr-5 bg-light' do %>
          <i class="fas fa-edit"></i>
          <p class="mb-0">記事を書く</p>
          <% end %>
        <% end %>
        <%= render 'layouts/search-bar' %>
      </div>
    </div>

    <div>
      <%= link_to "初級", articles_path(sort: 1, tag_id: @tag), class:"btn btn-success px-4 mr-3" %>
      <%= link_to "中級", articles_path(sort: 2, tag_id: @tag), class:"btn btn-primary px-4 mr-3" %>
      <%= link_to "上級", articles_path(sort: 3, tag_id: @tag), class:"btn btn-danger px-4" %>
    </div>

    <% if @tag.nil? && @level.nil? %>
    <% elsif @tag.nil? %>
      <p class="mt-5">"<%= @level %>"で絞り込み</p>
    <% elsif @level.nil? %>
      <p class="mt-5">"<%= @tag.name %>"で絞り込み</p>
    <% else %>
      <p class="mt-5">"<%= @tag.name %>""<%= @level %>"で絞り込み</p>
    <% end %>

    <div class="row">
      <div class="col-md-9 mt-4">
        <table class="table table-hover bg-white">
          <tbody>
            <% @articles.each do |article| %>
              <tr class="mt-3">
            　 <td class="p-0"><%= link_to article_path(article) do %><%= attachment_image_tag article, :image, :fill, 128, 72, format: 'jpeg', fallback: 'img/no_image.png', size: '128x72' %><% end %></td>
               <td class="h4"><%= link_to article.title, article_path(article) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @articles %>
      </div>
      
      <div class="col-md-2 mt-5 ml-5">
        <span><p><%= link_to articles_path, class:"tag_link" do %>すべての記事・投稿<% end %></p></span>
          <% @tags.each do |tag| %>
            <span><p><%= link_to articles_path(tag_id: tag.id, sort: 0), class:"tag_link" do %><%= tag.name %> (<%= tag.articles.count %>)<% end %></p></span>
          <% end %>
      </div>
    </div>

  </div>
