
<div class="swiper-container mt-4">
  <div class="swiper-wrapper">

    <% obj.each do |article| %>
      <div class="swiper-slide bg-light">
        <%= link_to article_path(article) do %>
          <%= attachment_image_tag article, :image, class:"img-fluid", fallback: 'img/no_image.png' %>
          <p class="mt-3 px-4 swiper-article-title"><%= article.title %></p>
          <p class="pull-right mr-3 badge"><%= article.level %></p>
        <% end %>
      </div>
    <% end %>

  </div>

   <div class="swiper-button-next swiper-button-black"></div>
   <div class="swiper-button-prev swiper-button-black"></div>

</div>
