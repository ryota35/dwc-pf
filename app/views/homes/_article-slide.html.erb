<div class="swiper-container mt-4">
  <div class="swiper-wrapper">
    
    <% obj.each do |article| %>
      <div class="swiper-slide bg-light">
        <%= link_to article_path(article) do %>
          <%= attachment_image_tag article, :image, :fill, 212, 100, format: 'jpeg' %>
          <p class="mt-3 px-4"><%= article.title %></p>
          <p class="text-right mr-3"><%= article.level %></p>
        <% end %>
      </div>
    <% end %>
    
  </div>
  
   <div class="swiper-button-next"></div>
   <div class="swiper-button-prev"></div>
   
</div>
