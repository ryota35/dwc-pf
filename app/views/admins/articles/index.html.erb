  <div class="container">

    <div class="row pt-5">
      <h1 class="ml-5">Latest Articles(管理者のみ表示)</h1>
      <div class="d-flex align-items-center ml-auto">
        <% if user_signed_in?%>
          <%= link_to  new_article_path, class: 'btn border border-success mr-5 bg-light' do %>
          <i class="fas fa-edit"></i>
          <p class="mb-0">記事を書く</p>
          <% end %>
        <% end %>
        <%= render 'layouts/search-bar' %>
      </div>
    </div>

    <table class="table table-hover mt-5 bg-white">
      <tbody>
        <% @articles.each do |article| %>
          <tr class="mt-3">
        　 <td><%= link_to admins_article_path(article) do %><%= attachment_image_tag article, :image, :fill, 200, 100, format: 'jpeg', fallback: 'img/no_image.png', size: '200x100' %><% end %></td>
           <td class="h2"><%= link_to article.title, admins_article_path(article) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <%= paginate @articles %>

  </div>