  <div class="container">

    <div class="row d-flex align-items-center pt-5">

      <h1 class="ml-5">Latest Articles(管理者のみ表示)</h1>
      <%= render partial: 'layouts/flash' %>

      <div class="d-flex align-items-center ml-auto">
        <%= link_to  new_admins_article_path, class: 'btn border border-dark mr-5 bg-light' do %>
          <i class="fas fa-edit"></i>
          <p class="mb-0">記事を書く</p>
        <% end %>
        <%= render 'layouts/search-bar' %>
      </div>

    </div>

    <div class="row">
      <div class="col-md-9 mt-3">
        <table class="table table-hover bg-white shadow">
          <tbody>
            <% @articles.each do |article| %>
              <tr class="mt-3">
            　   <td class="p-0"><%= link_to admins_article_path(article) do %><%= attachment_image_tag article, :image, :fill, 128, 72, format: 'jpeg', fallback: 'img/no_image.png', size: '128x72' %><% end %></td>
                <td>
                  <p class="h4"><%= link_to article.title, admins_article_path(article) %></p>
                  <div class="text-right">
                    <span class="badge badge-primary"><%= article.level %></span>
                    <% article.tags.each do |tag| %>
                      <span class="badge badge-secondary"><%= tag.name %></span>
                    <% end %>
                    <h6 class="article-show_date">
                      <i class="far fa-clock"></i>&nbsp;&nbsp;<%= article.created_at.strftime('%Y.%m.%d') %>
                    </h6>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @articles %>
      </div>
    </div>

  </div>