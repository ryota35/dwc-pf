<div class="container pt-5">
  <div class="row d-flex pt-5">

    <div class="col-md-5">
      <h1 class="pb-4 mb-4">クイズ作成</h1>

      <%= form_with model: @quiz, url: admins_quizzes_path, local: true do |f| %>
        <%= render "quiz-form", quiz: @quiz %>
      <% end %>
    </div>

    <div class="col-md-7">
      <h1 class="pb-3">問題一覧</h1>

      <div class="mb-5">
        <%= link_to "初級", admins_quizzes_path(sort: 0), class:"btn btn-success btn-lg px-4 mr-3" %>
        <%= link_to "中級", admins_quizzes_path(sort: 1), class:"btn btn-primary btn-lg px-4 mr-3" %>
        <%= link_to "上級", admins_quizzes_path, class:"btn btn-danger px-4" %>
      </div>

      <h2 class="pb-3"><<%= @quiz_level %>問題></h2>

      <% @quizzes.each do |quiz| %>

        <div class="d-flex align-items-center my-3">
          <h3 class="mr-3"><%= quiz.question %></h3>
          <span class=" ml-auto mr-3 "><%= link_to "編集",  edit_admins_quiz_path(quiz), class:"btn btn-success btn-lg text-nowrap" %></span>
          <%= link_to "削除", admins_quiz_path(quiz), method: :delete, data: { confirm: '本当に削除しますか？' }, class:"btn btn-danger btn-lg text-nowrap" %>
        </div>

        <div class="border-bottom d-flex justify-content-between pt-3 h4">
          <p><%= quiz.choice1 %></p>
          <p><%= quiz.choice2 %></p>
          <p><%= quiz.choice3 %></p>
          <p><%= quiz.choice4 %></p>
        </div>

      <% end %>

      <%= paginate @quizzes %>
    </div>

  </div>
</div>