<%= form_with model: quiz, local:true do |f| %>

  <%= render "layouts/errors", obj: quiz %>

  <table class="table table-borderless quiz-table mb-0 p-5 bg-white">
    <tbody>
      <tr>
        <td width="20%"><%= f.label :question %></td>
        <td width="80%"><%= f.text_area :question, autofocus: true, rows:2, class:"form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :choice1 %></td>
        <td><%= f.text_field :choice1, class:"form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :choice2 %></td>
        <td><%= f.text_field :choice2, class:"form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :choice3 %></td>
        <td><%= f.text_field :choice3, class:"form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :choice4 %></td>
        <td><%= f.text_field :choice4, class:"form-control" %></td>
      </tr>
      <tr>
        <td><%= f.label :answer %></td>
        <td><%= f.number_field :answer, min: 1, max: 4 %></td>
      </tr>
      <tr>
        <td><%= f.label :level %></td>
        <td><%= f.select :level, Quiz.levels.keys, {include_blank: true} %></td>
      </tr>
    </tbody>
  </table>

  <div class="d-flex justify-content-end p-3 bg-white">
    <%= f.submit "作成", class:"btn btn-lg btn-success px-5" %>
  </div>

<% end %>
